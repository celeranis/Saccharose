{
  "compilerOptions": {
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "baseUrl": "./src",
    "paths": {
      "@apiError": ["./controllers/api/error.js"],
      "@cache": ["./util/cache.js"],
      "@db": ["./util/db.js"],
      "@functions": ["./util/functions.js"],
      "@router": ["./util/router.js"],
      "@types": ["./util/types.js"],
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

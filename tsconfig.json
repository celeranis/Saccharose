{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "target": "ESNext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "baseUrl": "./src",
    "lib": [
      "ESNext",
      "dom"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

<%-
locals.noLink
        ? `<div class="material-item${locals.noName ? ' no-name' : ''}">`
        : `<a href="/genshin/${
                (material.ItemType === 'ITEM_WEAPON' ? 'weapons' : '') ||
                (material.ItemType === 'ITEM_FURNITURE' ? 'furnishings' : '') ||
                'items'
        }/${material.Id}" class="material-item${locals.noName ? ' no-name' : ''}">`
%>

<div class="material-card">
  <div class="material-icon<%= locals.noCount ? ' no-count' : '' %>" data-quality="<%= material.RankLevel || 0 %>">
    <% if (material.IconUrl || material.Icon || material.IconName) { %>
      <img src="<%= material.IconUrl ? material.IconUrl : `/images/genshin/${material.Icon || material.IconName}.png` %>" loading="lazy" decoding="async" />
    <% } else { %>
      <img src="/images/genshin/static/Item_Unknown.png" loading="lazy" decoding="async" />
    <% } %>
  </div>
  <% if (material.EffectIcon) { %>
    <img class="effect-icon" src="/images/genshin/<%= material.EffectIcon %>.png" loading="lazy" decoding="async" />
  <% } %>
  <% if (!locals.noCount) { %>
    <div class="material-count"><%- locals.itemCount ? escapeHtml(itemCount) : '&mdash;' %></div>
  <% } %>
</div>
<% if (!locals.noName) { %>
  <span class="material-name"><%= material.NameText %></span>
<% } %>

<%-
locals.noLink ? '</div>' : `</a>`
%>

<% readable.Items.forEach((item, itemIdx) => { %>
  <div class="content">
    <div class="valign">
      <h3>Text<%- itemIdx > 0 ? ' &ndash; Version ' + (itemIdx + 1)  : '' %></h3>
      <div class="grow"></div>
      <button class="secondary small" ui-action="copy: #wikitext-<%= locals.itemIdPrefix ? locals.itemIdPrefix + '-' : ''  %><%= itemIdx %>"
              ui-tippy-hover="Click to copy to clipboard"
              ui-tippy-flash="{content:'Copied!', delay: [0,2000]}"
              style="margin:5px 0">Copy</button>
    </div>
    <% if (item.MainQuestTrigger) { %>
      <div class="valign meta-props">
        <div class="prop">
          <span class="prop-label">Quest Condition</span>
          <span class="prop-values">
                <a href="/quests/<%= item.MainQuestTrigger.Id %>" class="prop-value"><%= item.MainQuestTrigger.Id %></a>
                <span class="prop-value"><%= item.MainQuestTrigger.TitleText %></span>
              </span>
        </div>
      </div>
    <% } %>
    <textarea id="wikitext-<%= locals.itemIdPrefix ? locals.itemIdPrefix + '-' : ''  %><%= itemIdx %>" readonly
              data-markers="<%= Marker.joinedString(item.Markers) %>"
              class="w100p wikitext autosize" spellcheck="false" translate="no"><%= item.ReadableText %></textarea>

    <div class="valign">
      <h3>As Template<%- itemIdx > 0 ? ' &ndash; Version ' + (itemIdx + 1)  : '' %></h3>
      <div class="grow"></div>
      <button class="secondary small" ui-action="copy: #wikitext-<%= locals.itemIdPrefix ? locals.itemIdPrefix + '-' : ''  %><%= itemIdx %>-template"
              ui-tippy-hover="Click to copy to clipboard"
              ui-tippy-flash="{content:'Copied!', delay: [0,2000]}"
              style="margin:5px 0">Copy</button>
    </div>
    <textarea id="wikitext-<%= locals.itemIdPrefix ? locals.itemIdPrefix + '-' : ''  %><%= itemIdx %>-template" readonly
              data-markers="<%= Marker.joinedString(item.Markers) %>"
              class="w100p wikitext autosize" spellcheck="false" translate="no"><%=
        `{{Readable|title=${readable?.Document?.TitleText || ''}\n|text=<!--\n-->` + item.ReadableText.replace(/\n\n+/g, '<br /><br /><!--\n-->').replace(/\n/g, '<!--\n-->') + '}}'
      %></textarea>
  </div>
<% })%>
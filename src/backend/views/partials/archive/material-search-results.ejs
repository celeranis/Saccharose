<div class="card result-count-card">
  <h2>Total Results: <span><%= materials.length %></span></h2>
</div>
<% if (materials.length) { %>
  <section class="card">
    <h2>Search Results</h2>
    <div class="content dispFlex flexWrap alignStart">
      <% for (let material of materials) { %>
        <div class="w100p">
          <a href="/items/<%= material.Id %>" class="secondary spacer3-all valign textAlignLeft" role="button" style="padding:5px">
            <%- include('partials/archive/item', {material, disableName: true, noText: true, noLink: true}) %>
            <span class="spacer10-left"><%= material.NameText %></span>
          </a>
        </div>
      <% } %>
    </div>
  </section>
<% } %>
<% if (!materials.length) { %>
  <div class="card no-results-found">
    <div class="content">
      <p>No results found for <b><%= searchText %></b></p>
    </div>
  </div>
<% } %>